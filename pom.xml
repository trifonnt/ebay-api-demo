<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.1.10.RELEASE</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>

	<groupId>com.ebay.api</groupId>
	<artifactId>ebay-api-demo</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>eBay API Demo Service</name>
	<description>A sample Sprint Boot service integration with eBay APIs.</description>

	<organization>
		<name>eBay</name>
	</organization>

	<properties>
		<java.version>1.8</java.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-jersey</artifactId>
		</dependency>
		<dependency>
			<groupId>com.ebay.auth</groupId>
			<artifactId>ebay-oauth-java-client</artifactId>
			<version>1.1.2</version>
		</dependency>
		<!-- @Trifon -->
		<!-- dependency>
			<groupId>ebaysdkcore</groupId>
			<artifactId>ebaysdkcore</artifactId>
			<version>1131</version>
		</dependency-->
		<!-- dependency>
			<groupId>com.github.lespaul361</groupId>
			<artifactId>ebaysdkcore</artifactId>
			<version>939</version>
		</dependency-->
		<dependency>
			<groupId>io.github.linus87</groupId>
			<artifactId>ebaysdkcore</artifactId>
			<version>1065</version>
		</dependency>
		<!-- @Trifon -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

	<repositories>
		<repository>
			<id>maven-central</id>
			<name>Central Repository</name>
			<url>https://repo.maven.apache.org/maven2</url>
			<layout>default</layout>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>
</project>
